{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESnext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "strictNullChecks": false,
		"baseUrl": ".",
		"paths": {
			"*": ["./src/*"]
		},
		"esModuleInterop" : true,
		"allowSyntheticDefaultImports": true
  },
	"ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
